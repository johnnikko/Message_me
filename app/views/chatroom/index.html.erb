<h4 class="ui center aligned medium icon header">
  <i class="circular red coffee icon"></i>
  Say Something
</h4>

<div class="ui grid">
  <div class="four wide column">
    <div class="ui inverted blue vertical menu">
      <a class="active item">
        Online Chat
      </a>
      <a class="item">
        Compose Message
      </a>
      <a class="item">
        Inbox
      </a>
      <a class="item">
        Outbox
      </a>
      <a class="item">
        Drafts
      </a>
      <a class="item">
        Trash
      </a>
    </div>
  </div>
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html:{class:"ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
